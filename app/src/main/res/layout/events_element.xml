<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_item_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp"
    android:background="@drawable/rectangle21">

    <LinearLayout
        android:id="@+id/iv_event_type"
        android:layout_width="67dp"
        android:layout_height="27dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/online_offline_tag_rectangle"
        android:elevation="100dp"
        android:scaleType="center"
        android:layout_marginLeft="2.1dp"
        android:paddingLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Offline"
            android:textColor="@color/white"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="-85dp">



        <ImageView
            android:id="@+id/iv_event"
            android:layout_width="150dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:elevation="100dp"
            android:scaleType="center" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/event_name"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:padding="0dp"
                android:layout_marginTop="20dp"
                android:text="Ardionos' trials"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:shadowColor="@color/white"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="8"/>

            <TextView
                android:id="@+id/event_desc"
                android:layout_width="260dp"
                android:layout_height="94dp"
                android:layout_alignParentBottom="true"
                android:paddingBottom="10dp"
                android:textSize="15sp"
                android:text="AHDKDFBJFVKEJBRFJKVADBKFJABKFJBKJ"
                android:shadowColor="@color/white"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="8"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>