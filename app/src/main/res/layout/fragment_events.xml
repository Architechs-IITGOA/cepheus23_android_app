<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragments.EventsFragment">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/mainbackground"
      android:paddingLeft="20dp">

      <TextView
          android:id="@+id/tv_events"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="20dp"
          android:text="Event"
          android:textColor="@color/white"
          android:textSize="50sp"
          app:layout_constraintBottom_toTopOf="@+id/eventscroll"
          app:layout_constraintStart_toStartOf="parent" />

      <ScrollView
          android:id="@+id/eventscroll"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="18dp"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginRight="20dp"
          app:layout_constraintTop_toBottomOf="@+id/tv_events">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

              <ImageView
                  android:id="@+id/card1"
                  android:layout_width="match_parent"
                  android:padding="30dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:scaleType="centerCrop"
                  android:src="@drawable/rectangle21" />


              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:paddingBottom="20dp"
                  android:scaleType="centerCrop"
                  android:src="@drawable/rectangle21" />

              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:paddingBottom="20dp"
                  android:scaleType="centerCrop"
                  android:src="@drawable/rectangle21" />


          </LinearLayout>
      </ScrollView>

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="65dp"
          android:paddingRight="20dp"
          android:src="@drawable/eventcard2"
          app:layout_constraintTop_toBottomOf="@+id/eventscroll"
          tools:ignore="MissingConstraints" />


  </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
