<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragments.EventsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mainbackground">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="20dp" >
            <LinearLayout
                android:id="@+id/ll_panel"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_events"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Event"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:textSize="21sp"
                    app:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/tv_competitions"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="Competitions"
                    android:gravity="end"

                    android:textColor="@color/white"
                    android:textSize="21sp"
                    app:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/tv_workshops"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"

                    android:padding="10dp"
                    android:text="Workshops"
                    android:textColor="@color/white"
                    android:textSize="21sp"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/view_event_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_panel"
                android:layout_marginTop="10dp" />


        </RelativeLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

