<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/sponsor_item_content"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="25dp"
android:orientation="vertical"
android:background="@drawable/eventadapterimg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_sponsor_image"
        android:src="@drawable/cepheusicon"
        android:layout_gravity="center"
        android:padding="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sponsor"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:id="@+id/tv_sponsor_description"
        android:fontFamily="@font/mohaveregular"
        android:textSize="20sp"
        android:textStyle="bold"/>
</LinearLayout>